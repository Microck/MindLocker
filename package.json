{
  "name": "mindlocker",
  "version": "1.0.0",
  "description": "Block distracting websites.",
  "main": "electron.cjs",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "tsc && vite build",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.mindlocker.app",
    "productName": "MindLocker",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "./resources/",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "portable",
      "requestedExecutionLevel": "requireAdministrator"
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "lucide-react": "^0.513.0"
  }
}
